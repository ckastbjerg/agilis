#!/usr/bin/env node

'use strict';

process.title = 'cakewalk';

var cakewalk = require('../index.js');
var fs = require('fs');
var packageJson = require('../package.json');

var dir = process.argv[2];

if (!dir){
    program.help();
    return;
}

if (!fs.lstatSync(dir).isDirectory()) {
    console.error("'%s' is not a directory", dir);
    program.help();
    return;
}

cakewalk(dir);
